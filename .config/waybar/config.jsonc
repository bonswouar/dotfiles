    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%a %Y-%m-%d}"
    },
    "cpu": {
        "format": "{usage}%",
        "tooltip": true,
    },
    "cpu_frequency": {
        "format": "@{avg_frequency}Ghz Ôãõ",
        "tooltip": true,
    },
    "memory": {
