        "idle_inhibitor",
        "custom/audio-idle-inhibitor",
        //"keyboard-state",
        "custom/dunst",
        //"power-profiles-daemon",
        "cpu",
        "cpu_frequency",
        "memory",
        "temperature",
        "custom/show-screen-refresh-rate",
        "pulseaudio",
        "network",
        "backlight",
        //"sway/language",
        "battery",
        "clock",
        "tray",
    ],
