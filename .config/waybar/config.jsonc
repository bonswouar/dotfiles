    //    "power-saver": "ÔÅ¨"
    //  }
    //},
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} üñß",
        "tooltip-format": "{ifname} via {gwaddr} Ôà≥",
        "format-linked": "{ifname} (No IP) ÔÉÅ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon} Ôäî {format_source}",
        "format-bluetooth-muted": "Ôë¶  {icon} Ôäî {format_source}",
        "format-muted": "Ôë¶  {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "Û∞ãã",
            "hands-free": "Ôâñ",
            "headset": "Óπô",
            "phone": "ÔÇï",
            "portable": "ÔÑã",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "custom/systemd": {
        "exec": "$HOME/.local/bin/waybar/systemd.sh",
        "return-type": "json",
        "interval": 10
    },
    "custom/dunst": {
        "exec": "$HOME/.local/bin/waybar/dunst.sh",
        "return-type": "json",
        "interval": 5,
        "on-click": "dunstctl history-pop",
        "on-click-right": "dunstctl close-all"
    },
    "custom/show-screen-refresh-rate": {
        "format": "{} Û∞πë",
        "exec": "$HOME/.local/bin/waybar/sway-screen-show-refresh-rate.sh",
        "return-type": "json",
        "interval": 5,
        "on-click-right": "$HOME/.local/bin/sway-screen-switch-refresh-rate.sh"
    },
    "custom/audio-idle-inhibitor": {
        "format": "{icon}",
        "exec": "sway-audio-idle-inhibit --dry-print-both-waybar",
        "exec-if": "which sway-audio-idle-inhibit",
        "return-type": "json",
        "tooltip": false,
        "format-icons": {
            "output": "ÔÖÑ",
            "input": " ÔÑ∞",
            "output-input": "ÔÖÑ  ÔÑ∞",
            "none": ""
        }
    },
    "custom/music": {
        "format": "ÔÄÅ  {}",
        "escape": true,
        "interval": 5,
        "tooltip": false,
        "exec": "playerctl metadata --format='{{ title }} - {{artist}}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    }
}
